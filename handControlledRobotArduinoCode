#include <Servo.h>

Servo motorOne;  //declaring the motors 
Servo motorTwo;

char direct; //this determines what direction to turn or move in

void setup()
{
  Serial.begin(9600);
  motorOne.attach(10);
  motorTwo.attach(11);

}

void loop()
{
    
  if (Serial.available() > 0){ // motor control
    if (Serial.peek() == '1'){
      Serial.println(Serial.read());
      direct = 1;
    }
    else if (Serial.peek() == '2'){
      Serial.println(Serial.read());
      direct = 2;
    }
    else if (Serial.peek() == '4'){
      Serial.println(Serial.read());
      direct = 4;
    }
    else if (Serial.peek() == '5'){
      Serial.println(Serial.read());
      direct = 5;
    }
    else if (Serial.peek() == '3'){
      Serial.println(Serial.read());
      direct = 3;
    }
  }
  if (direct == 1){
    motorOne.write(2000);
    motorTwo.write(1000);
  }
  else if (direct == 2){
    motorOne.write(1000);
    motorTwo.write(2000);
  }
  
  else if (direct == 4){//forwards
    motorOne.write(1000);
    motorTwo.write(1000);

  }
  else if (direct == 5){//back
    motorOne.write(2000);
    motorTwo.write(2000);

  }
  else{
    motorOne.write(1500);
    motorTwo.write(1500);
  }

}




